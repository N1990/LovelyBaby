<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.cmbb.smartkids.activity.diary.AddBabyActivity">
    <include
        layout="@layout/custom_actionbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_global_padding"
            android:layout_marginRight="@dimen/half_global_padding"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_addbaby_header"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/btn_white_radio_bg"
                android:elevation="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="头像"
                    android:textColor="@android:color/darker_gray" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_addbaby_header"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_addbaby_header_right"
                    app:actualImageScaleType="centerCrop"
                    app:fadeDuration="300"
                    app:placeholderImage="@drawable/ic_default_header_bg"
                    app:roundAsCircle="true"
                    app:roundingBorderColor="@android:color/white"
                    app:roundingBorderWidth="1dp" />


                <ImageView
                    android:id="@+id/iv_addbaby_header_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_addbaby_nickname"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="5dip"
                android:background="@drawable/btn_white_radio_bg"
                android:elevation="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="姓名"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_addbaby_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_addbaby_nickname_right"
                    android:textColor="@android:color/black" />


                <ImageView
                    android:id="@+id/tv_addbaby_nickname_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_addbaby_birthday"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="5dip"
                android:background="@drawable/btn_white_radio_bg"
                android:elevation="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="生日"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_addbaby_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_addbaby_birthday_right"
                    android:textColor="@android:color/black" />


                <ImageView
                    android:id="@+id/tv_addbaby_birthday_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_addbaby_sex"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="5dip"
                android:background="@drawable/btn_white_radio_bg"
                android:elevation="3dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="性别"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_addbaby_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/tv_addbaby_sex_right"
                    android:textColor="@android:color/black" />


                <ImageView
                    android:id="@+id/tv_addbaby_sex_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/btn_right_anchor_bg"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_addbaby_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="50dip"
                android:background="@drawable/btn_login_selector"
                android:gravity="center"
                android:padding="10dip"
                android:text="保存"
                android:textColor="@android:color/white" />



            </LinearLayout>
        </ScrollView>

</LinearLayout>
