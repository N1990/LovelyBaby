<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.cmbb.smartkids.activity.home.ApplyPopmanActivity">

    <include layout="@layout/custom_actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/half_global_padding">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请阅读,提出申请时默认遵守"
                    android:textSize="@dimen/txt_small" />

                <TextView
                    android:id="@+id/tv_notify_popman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《达人须知》"
                    android:textColor="@android:color/holo_blue_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="@dimen/half_global_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/btn_user_bg"
                    android:scaleType="fitCenter" />

                <EditText
                    android:id="@+id/et_real_name_popman"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="真实姓名"
                    android:inputType="text"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/txt_normal" />

                <ImageView
                    android:id="@+id/iv_real_name_popman_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:background="@mipmap/btn_edit_delete"
                    android:scaleType="fitCenter"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dip"
                android:background="@drawable/single_edit_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:padding="@dimen/half_global_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/btn_identity_bg"
                    android:scaleType="fitCenter" />

                <EditText
                    android:id="@+id/et_identity_popman"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="身份证"
                    android:inputType="text"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/txt_normal" />

                <ImageView
                    android:id="@+id/iv_identity_popman_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:background="@mipmap/btn_edit_delete"
                    android:scaleType="fitCenter"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dip"
                android:background="@drawable/single_edit_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:padding="@dimen/half_global_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/btn_phone_bg"
                    android:scaleType="fitCenter" />

                <EditText
                    android:id="@+id/et_phone_popman"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="手机号"
                    android:inputType="phone"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/txt_normal" />

                <ImageView
                    android:id="@+id/iv_phone_popman_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:background="@mipmap/btn_edit_delete"
                    android:scaleType="fitCenter"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dip"
                android:background="@drawable/single_edit_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal"
                android:padding="@dimen/half_global_padding">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/btn_mail_bg"
                    android:scaleType="fitCenter" />

                <EditText
                    android:id="@+id/et_verify_code_popman"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:hint="短息验证码"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/txt_normal" />

                <TextView
                    android:id="@+id/tv_verify_phone_code_popman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/btn_verify_selector"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="获取验证码"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/txt_normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dip"
                android:background="@drawable/single_edit_bg" />

            <com.cmbb.smartkids.widget.spinner.NiceSpinner
                android:id="@+id/ns_sort_popman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                app:hideLeftDrawable="false"
                app:leftDrawable="@mipmap/btn_popnam_bg" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_introduce_popman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_radio_bg"
                    android:gravity="start"
                    android:hint="个人简介，150字以内"
                    android:minHeight="100dip"
                    android:padding="@dimen/half_global_padding"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/txt_normal" />

                <TextView
                    android:id="@+id/tv_introduce_popman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_introduce_popman"
                    android:layout_margin="2dip"
                    android:text="0/150"
                    android:textColor="@android:color/darker_gray" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="可选择5张图片"
                android:textSize="@dimen/txt_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="*  请拍下身份证正反两面照片上传，以便核实身份；请拍下相关的资格证书、获奖证书上传，可以提高申请成功率哦"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/txt_small" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_pic_popman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <ImageView
                        android:id="@+id/iv_add_pic_popman"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:layout_marginRight="10dip"
                        android:scaleType="center"
                        android:src="@mipmap/btn_add_pic_bg" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
