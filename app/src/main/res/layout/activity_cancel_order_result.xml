<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmbb.smartkids.activity.order.CancelOrderResultActivity">

    <include
        layout="@layout/custom_actionbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_global_padding"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:visibility="visible">
            <android.support.v7.widget.CardView
                android:id="@+id/card_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dip"
                app:cardElevation="3dip">

                <EditText
                    android:id="@+id/et_cancel_order_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="start"
                    android:hint="请输入原因，限制1-200个字"
                    android:minHeight="100dip"
                    android:padding="@dimen/half_global_padding"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/txt_normal" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_cancel_order_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/card_result"
                android:layout_margin="2dip"
                android:textColor="@android:color/darker_gray"
                android:text="0/200" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/darker_gray"
                android:text="请阅读"/>
            <TextView
                android:id="@+id/tv_cancel_order_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:textColor="@color/primaryColor"
                android:text="《取消订单须知》"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_cancel_order_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_cancel_order_one_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:button="@drawable/btn_radio_selector"
                android:text=" 原因1" />
            <RadioButton
                android:id="@+id/rb_cancel_order_two_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_radio_selector"
                android:textColor="@android:color/black"
                android:text=" 原因2" />
            <RadioButton
                android:id="@+id/rb_cancel_order_three_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/btn_radio_selector"
                android:textColor="@android:color/black"
                android:text=" 原因3" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_cancel_order_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:background="@drawable/btn_login_selector"
            android:textColor="@android:color/white"
            android:padding="10dip"
            android:text="提交"/>
    </LinearLayout>



</LinearLayout>
