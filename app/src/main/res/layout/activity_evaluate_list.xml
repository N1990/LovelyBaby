<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmbb.smartkids.activity.order.EvaluateListActivity">
    <include
        layout="@layout/custom_actionbar"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lmrv_self"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsv_self"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="240dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recycler_no_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/btn_service_normal"
                android:gravity="center"
                android:text="没有任何服务"
                android:textSize="@dimen/txt_middle" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
