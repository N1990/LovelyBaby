<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmbb.smartkids.activity.login.ForgetPwdActivity">

    <include layout="@layout/custom_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/global_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/shape_search_background"
            android:orientation="horizontal"
            android:padding="@dimen/global_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/btn_password_bg"
                android:scaleType="fitCenter" />

            <EditText
                android:id="@+id/et_forget_pwd"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/txt_normal" />

            <ImageView
                android:id="@+id/iv_forget_pwd_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:background="@mipmap/btn_edit_delete"
                android:scaleType="fitCenter"
                android:visibility="invisible" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/shape_search_background"
            android:orientation="horizontal"
            android:padding="@dimen/global_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/btn_password_bg"
                android:scaleType="fitCenter" />

            <EditText
                android:id="@+id/et_forget_pwd_comfirm"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="@dimen/txt_normal" />

            <ImageView
                android:id="@+id/iv_login_pwd_comfirm_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:background="@mipmap/btn_edit_delete"
                android:scaleType="fitCenter"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_forget_pwd_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:padding="@dimen/global_padding"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_middle" />
    </LinearLayout>


</LinearLayout>
