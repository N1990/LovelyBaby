<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmbb.smartkids.activity.home.HomeActivity">

    <!--<include layout="@layout/custom_actionbar" />-->

    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_home_bottom"
        android:layout_below="@+id/tl_main_actionbar" />

    <LinearLayout
        android:id="@+id/ll_home_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_main"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/btn_home_main_selector"
            android:gravity="center"
            android:padding="@dimen/half_global_padding"
            android:text="首页"
            android:textColor="@color/txt_black_to_primary_selector" />

        <TextView
            android:id="@+id/tv_home_service"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/btn_home_service_selector"
            android:gravity="center"
            android:text="服务"
            android:textColor="@color/txt_black_to_primary_selector" />

        <TextView
            android:id="@+id/tv_home_community"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/btn_home_community_selector"
            android:gravity="center"
            android:text="话题"
            android:textColor="@color/txt_black_to_primary_selector"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_home_user"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/btn_home_self_selector"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/txt_black_to_primary_selector" />

        <TextView
            android:id="@+id/tv_home_more"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/btn_home_more_selector"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/txt_black_to_primary_selector" />
    </LinearLayout>

</RelativeLayout>
