<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmbb.smartkids.activity.user.ModifyIntroduceActivity">

    <include layout="@layout/custom_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/btn_white_radio_bg"
        android:elevation="3dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_modify_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="start"
            android:hint="请输入您的个人介绍信息"
            android:minHeight="100dip"
            android:padding="5dip"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/txt_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_limit_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="7dip"
        android:layout_marginTop="2dip"
        android:text="0/150"
        android:textColor="@android:color/darker_gray" />


    <TextView
        android:id="@+id/tv_modify_introduce_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:padding="10dip"
        android:text="提交"
        android:textColor="@android:color/white" />

</LinearLayout>
