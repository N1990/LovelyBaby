<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/custom_actionbar" />


        <TextView
            android:id="@+id/tv_suggest_feek"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/tl_main_actionbar"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="意见反馈"
            android:textAppearance="@style/TextAppearance.Smart.Body1" />

        <TextView
            android:id="@+id/tv_growth_values"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/tv_suggest_feek"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="成长值说明"
            android:textAppearance="@style/TextAppearance.Smart.Body1" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/tv_growth_values"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关于萌宝派"
            android:textAppearance="@style/TextAppearance.Smart.Body1" />

        <!--<TextView
            android:id="@+id/tv_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@+id/tv_about"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="清除缓存"
            android:textAppearance="@style/TextAppearance.Smart.Body1" />-->


        <include layout="@layout/home_bottom"/>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
