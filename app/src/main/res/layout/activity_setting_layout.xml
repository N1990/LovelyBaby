<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/custom_actionbar"/>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tl_main_actionbar"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="个人资料"
            android:textAppearance="@style/TextAppearance.Smart.Medium"/>

        <TextView
            android:id="@+id/tv_suggest_feek"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_info"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="意见反馈"
            android:textAppearance="@style/TextAppearance.Smart.Medium"/>

        <TextView
            android:id="@+id/tv_growth_values"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_suggest_feek"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="成长值说明"
            android:textAppearance="@style/TextAppearance.Smart.Medium"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_growth_values"
            android:background="@drawable/shape_background_white_c"
            android:drawableRight="@mipmap/btn_right_anchor_bg"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="关于萌宝派"
            android:textAppearance="@style/TextAppearance.Smart.Medium"/>


        <TextView
            android:id="@+id/tv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_about"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="50dip"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:padding="10dip"
            android:text="注  销"
            android:textColor="@android:color/white"/>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
