<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dip"
    android:background="@drawable/btn_white_radio_bg"
    android:elevation="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_home_fra_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@color/placeholder" />

        <ImageView
            android:id="@+id/iv_home_fra_tag_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />



            <TextView
                android:id="@+id/tv_home_fra_city_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_service_location_mask_bg"
                android:layout_marginRight="-15dp"
                android:textColor="@android:color/white"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/home_service_location_bg"
                android:paddingLeft="15dip"
                android:paddingRight="20dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text=""
                />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/half_global_padding"
            android:background="@drawable/btn_mask_bg">

            <TextView
                android:id="@+id/tv_home_fra_title_item"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:padding="@dimen/half_global_padding"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_middle"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text=""/>


            <TextView
                android:id="@+id/tv_home_fra_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/half_global_padding"
                android:textColor="@android:color/white"
                android:layout_marginLeft="20dp"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
