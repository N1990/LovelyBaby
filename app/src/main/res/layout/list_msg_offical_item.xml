<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_radio_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_global_padding">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_msg_offical_item"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_margin="3dip"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@drawable/ic_default_header_bg"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@android:color/white"
            fresco:roundingBorderWidth="1dp" />


        <TextView
            android:id="@+id/tv_title_msg_offical_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_msg_right_item"
            android:layout_toRightOf="@+id/iv_msg_offical_item"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_middle"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_content_msg_offical_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_msg_offical_item"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/iv_msg_right_item"
            android:layout_toRightOf="@+id/iv_msg_offical_item"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/dimgray" />

        <ImageView
            android:id="@+id/iv_msg_right_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_right_anchor_bg" />

    </RelativeLayout>

    <View
        android:id="@+id/v_msg_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

</LinearLayout>

