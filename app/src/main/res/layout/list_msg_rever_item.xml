<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white_radio_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_global_padding">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_msg_revere_item"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_margin="3dip"
            fresco:actualImageScaleType="centerCrop"
            fresco:fadeDuration="300"
            fresco:placeholderImage="@color/placeholder"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@android:color/white"
            fresco:roundingBorderWidth="1dp" />

        <TextView
            android:id="@+id/tv_title_msg_rever_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_msg_right_item"
            android:layout_toRightOf="@+id/iv_msg_revere_item"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1.5dp"
            android:maxLines="1"
            android:text="title"
            android:textColor="@color/dimgray" />


        <TextView
            android:id="@+id/tv_content_msg_rever_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_msg_rever_item"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_msg_right_item"
            android:layout_toRightOf="@+id/iv_msg_revere_item"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1.5dp"
            android:maxLines="1"
            android:text="content"
            android:textColor="@color/dimgray" />

        <ImageView
            android:id="@+id/iv_msg_right_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_right_anchor_bg" />


    </RelativeLayout>


    <View
        android:id="@+id/v_msg_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />


</LinearLayout>

