<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_white_radio_bg"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/half_global_padding">


        <RelativeLayout
            android:id="@+id/rl_msg_service_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_msg_service_item"
                android:layout_width="120dp"
                android:layout_height="72dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@color/placeholder" />

            <ImageView
                android:id="@+id/iv_msg_service_tag_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title_msg_service_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/global_padding"
            android:layout_toRightOf="@+id/rl_msg_service_item"
            android:layout_toLeftOf="@+id/iv_msg_right_item"
            android:ellipsize="end"
            android:textSize="@dimen/txt_middle"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="萌宝派下线服务"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_content_msg_service_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dp"
            android:layout_marginTop="@dimen/global_padding"
            android:layout_below="@+id/tv_title_msg_service_item"
            android:layout_toLeftOf="@+id/iv_msg_right_item"
            android:layout_toRightOf="@+id/rl_msg_service_item"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="萌宝派下线服务"
            android:textColor="@color/dimgray" />

        <ImageView
            android:id="@+id/iv_msg_right_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_right_anchor_bg"/>




    </RelativeLayout>


    <View
        android:id="@+id/v_msg_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>


</LinearLayout>

