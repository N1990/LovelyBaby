<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_background_white_c"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_my_service_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@android:color/black"
        tools:text="服务标题" />

    <ImageView
        android:id="@+id/iv_my_service_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_right_anchor_bg" />

    <TextView
        android:id="@+id/tv_my_service_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_my_service_right"
        android:textColor="@android:color/black"
        tools:text="服务状态" />

</RelativeLayout>
