<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_order_root_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_radio_bg"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginBottom="5dip"
        android:padding="5dip"
        android:orientation="vertical"
        android:elevation="3dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_order_item"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerVertical="true"
                fresco:placeholderImage="@color/placeholder"
                fresco:roundAsCircle="true"
                fresco:roundingBorderWidth="1dip"
                fresco:roundingBorderColor="@android:color/white"
                fresco:actualImageScaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_order_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_order_item"
                android:layout_toLeftOf="@+id/tv_order_status_item"
                android:layout_alignTop="@+id/iv_order_item"
                android:padding="5dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:text="活动标题"/>
            <TextView
                android:id="@+id/tv_order_price_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_order_item"
                android:layout_alignBottom="@+id/iv_order_item"
                android:padding="5dip"
                android:layout_marginLeft="10dip"
                android:textColor="@android:color/black"
                android:text="费用"/>
            <TextView
                android:id="@+id/tv_order_status_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dip"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:text="状态"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_order_list_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dip"
            android:background="@android:color/darker_gray"/>
        <LinearLayout
            android:id="@+id/ll_order_list_handler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/fl_order_praise_item"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>
            <TextView
                android:id="@+id/tv_order_pay_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="立即支付"
                android:visibility="gone"/>
            <View
                android:id="@+id/v_order_pay_divider"
                android:layout_width="1px"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_order_cancel_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="取消订单"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>