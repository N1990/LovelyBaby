<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="3dip">


    <TextView
        android:id="@+id/tv_point_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_padding"
        android:layout_marginTop="@dimen/global_padding"
        android:lineSpacingExtra="1dip"
        android:padding="@dimen/global_padding"
        android:text="您的总积分："
        android:textColor="@color/dimgray" />

    <TextView
        android:id="@+id/tv_point_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_padding"
        android:layout_marginTop="@dimen/global_padding"
        android:layout_toRightOf="@+id/tv_point_title"
        android:lineSpacingExtra="1dip"
        android:padding="@dimen/global_padding"
        android:text=""
        android:textColor="@color/primaryColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_point_title"
        android:background="@color/backgray"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:lineSpacingExtra="1dip"
            android:padding="@dimen/global_padding"
            android:text="详情"
            android:textColor="@color/dimgray" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/dimgray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="1dip"
            android:padding="@dimen/global_padding"
            android:text="积分"
            android:textColor="@color/dimgray" />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/dimgray" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:lineSpacingExtra="1dip"
            android:padding="@dimen/global_padding"
            android:text="时间"
            android:textColor="@color/dimgray" />
    </LinearLayout>

</RelativeLayout>
